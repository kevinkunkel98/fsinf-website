---
// src/pages/news/[slug].astro
import { type CollectionEntry, getCollection } from "astro:content";
import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import Header from "../../components/Header.astro";

// Define the getStaticPaths function
export async function getStaticPaths() {
  const news = await getCollection("wiki");
  return news.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

type Props = CollectionEntry<"wiki">;

const wikiItem = Astro.props
const { Content } = await wikiItem.render();
---

<!doctype html>
<html lang="de">
  <head>
    <BaseHead
      title={wikiItem.data.title}
      description={wikiItem.data.description}
    />
  </head>
  <body>
    <Header />
    <main>
      <article class="relative">
        <div class="mt-4">
          <Content />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
