---
import { Image } from "astro:assets";

import telegram from "/src/images/telegram.svg";
import instagram from "/src/images/insta.svg";
import discord from "/src/images/discord.svg";
import gitlab from "/src/images/gitlab.svg";

const today = new Date();
---

<footer
  class="light:bg-grey-200 p-8 pb-24 text-center text-gray-700 dark:bg-slate-800 dark:text-white"
>
  &copy; {today.getFullYear()} Fachschaftsrat Informatik.
  <div class="mt-4 flex justify-center gap-4">
    <a
      href="https://t.me/fsinfLeipzig"
      target="_blank"
      class="hover:text-gray-900"
    >
      <span class="sr-only">Fsinf Telegram</span>
      <Image
        src={telegram}
        alt="Telegram"
        width="32"
        height="32"
        aria-hidden="true"
        class="h-8 w-8"
      />
    </a>
    <a
      href="https://www.instagram.com/fsinf_leipzig/"
      target="_blank"
      class="hover:text-gray-900"
    >
      <span class="sr-only">Fsinf Insta</span>
      <Image
        src={instagram}
        alt="Instagram"
        width="32"
        height="32"
        aria-hidden="true"
        class="h-8 w-8"
      />
    </a>
    <a
      href="https://discord.com/invite/kprYzcKpvk"
      target="_blank"
      class="hover:text-gray-900"
    >
      <span class="sr-only">Fsinf Discord</span>
      <Image
        src={discord}
        alt="Discord"
        width="32"
        height="32"
        aria-hidden="true"
        class="h-8 w-8"
      />
    </a>
    <a
      href="https://git.fsinf.informatik.uni-leipzig.de/"
      target="_blank"
      class="hover:text-gray-900"
    >
      <span class="sr-only">Fsinf GitLab repo</span>
      <Image
        src={gitlab}
        alt="GitLab"
        width="32"
        height="32"
        aria-hidden="true"
        class="h-8 w-8"
      />
    </a>
  </div>
</footer>
